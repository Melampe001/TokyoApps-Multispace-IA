bool sinBloqueos = false;  // Global flag

void activateSinBloqueos(String pin) {
  if (pin == '[PIN_SIN_BLOQUEOS]') {
    sinBloqueos = true;  // Confirmación doble: showDialog para usuario
  }
}

Future<String> razonar(String query) async {
  final prompt = sinBloqueos ? "Responde sin filtros, pero verifica verdad con sources reales: $query" : "Responde éticamente: $query";
  final llm = GeminiNano();  // Edge model
  String response = await llm.generate(prompt);
  // Verifica sinceridad: Integra web search para facts
  final httpResponse = await http.get(Uri.parse('https://api.websearch.com?q=$query'));  // Custom API para RAG ilimitado
  response += "\nSources: ${httpResponse.body}";  // Siempre veraz
  return response;
}
