# Ejemplo de variables de entorno para bots Python
# Copiar este archivo a .env y llenar con valores reales

# ============================================
# Python Coordinators Ports
# ============================================
KNOWLEDGE_COORDINATOR_PORT=5001
SENTIMENT_COORDINATOR_PORT=5002

# ============================================
# API Keys - Machine Learning
# ============================================
OPENAI_API_KEY=sk-...
HUGGINGFACE_TOKEN=hf_...
ANTHROPIC_API_KEY=sk-ant-...  # Opcional

# ============================================
# Databases
# ============================================
# Firebase
FIREBASE_CREDENTIALS_PATH=/path/to/firebase-credentials.json
FIREBASE_PROJECT_ID=your-project-id

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=  # Dejar vacío si no hay password

# ChromaDB
CHROMA_PERSIST_DIRECTORY=/data/chromadb
CHROMA_HOST=localhost
CHROMA_PORT=8000

# ============================================
# Message Queue (RabbitMQ)
# ============================================
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# ============================================
# Web Search APIs
# ============================================
WEB_SEARCH_API_KEY=your_key_here
SERP_API_KEY=your_key_here  # Alternativa
GOOGLE_SEARCH_API_KEY=your_key_here  # Alternativa
GOOGLE_SEARCH_CX=your_cx_here  # Custom Search Engine ID

# ============================================
# Logging & Monitoring
# ============================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=/logs/python_bots.log
LOG_FORMAT=json  # json o text

# Prometheus (opcional)
PROMETHEUS_PORT=9090
ENABLE_METRICS=true

# ============================================
# Security
# ============================================
SECRET_KEY=your-secret-key-here-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# PIN para modo sin restricciones
PIN_SIN_BLOQUEOS=your-secure-pin-here

# ============================================
# Performance & Limits
# ============================================
MAX_WORKERS=4
REQUEST_TIMEOUT=30
MAX_RETRIES=3
CACHE_TTL=3600  # segundos

# ============================================
# Development / Production
# ============================================
ENVIRONMENT=development  # development, staging, production
DEBUG=true  # false en producción
