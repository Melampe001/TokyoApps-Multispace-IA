# Ejemplo de variables de entorno para bots Node.js
# Copiar este archivo a .env y llenar con valores reales

# ============================================
# Node.js Coordinators Ports
# ============================================
GENAI_COORDINATOR_PORT=3001
DEPLOYMENT_COORDINATOR_PORT=3002

# ============================================
# API Keys - AI Services
# ============================================
GOOGLE_GEMINI_API_KEY=your_gemini_key_here
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...  # Opcional

# ============================================
# Storage - Cloud Services
# ============================================
# Firebase
FIREBASE_CREDENTIALS_PATH=/path/to/firebase-credentials.json
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-bucket.appspot.com

# AWS S3 (alternativa)
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_REGION=us-east-1
AWS_S3_BUCKET=tokyo-ia-media

# ============================================
# Databases
# ============================================
# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=  # Dejar vacío si no hay password

# MongoDB (opcional)
MONGODB_URI=mongodb://localhost:27017/tokyoia

# ============================================
# Message Queue (RabbitMQ)
# ============================================
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# ============================================
# Build & Deployment
# ============================================
# Android
GRADLE_PATH=/usr/bin/gradle
ANDROID_SDK_ROOT=/path/to/android-sdk
ANDROID_KEYSTORE_PATH=/path/to/keystore.jks
ANDROID_KEYSTORE_PASSWORD=your_keystore_password
ANDROID_KEY_ALIAS=your_key_alias
ANDROID_KEY_PASSWORD=your_key_password

# iOS
FASTLANE_USER=your_apple_id@example.com
FASTLANE_PASSWORD=your_password
MATCH_GIT_URL=https://github.com/your-org/certificates.git

# ============================================
# Store Publishing
# ============================================
# Google Play
GOOGLE_PLAY_SERVICE_ACCOUNT=/path/to/play-service-account.json
GOOGLE_PLAY_PACKAGE_NAME=com.tokyoia.app
GOOGLE_PLAY_TRACK=internal  # internal, alpha, beta, production

# App Store Connect
APP_STORE_CONNECT_KEY_ID=your_key_id
APP_STORE_CONNECT_ISSUER_ID=your_issuer_id
APP_STORE_CONNECT_KEY=/path/to/appstore-key.p8

# ============================================
# Repository & CI/CD
# ============================================
GITHUB_TOKEN=ghp_...
GITHUB_REPO_OWNER=Melampe001
GITHUB_REPO_NAME=Tokyo-IA
GIT_REPO_PATH=/path/to/repo

# ============================================
# FFmpeg & Media Processing
# ============================================
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe
MAX_VIDEO_DURATION=60  # segundos
MAX_IMAGE_SIZE=4096  # píxeles (ancho o alto)

# ============================================
# Logging & Monitoring
# ============================================
NODE_ENV=development  # development, staging, production
LOG_LEVEL=info  # error, warn, info, verbose, debug
LOG_FILE=/logs/node_bots.log
LOG_FORMAT=json  # json o simple

# Prometheus (opcional)
PROMETHEUS_PORT=9091
ENABLE_METRICS=true

# ============================================
# Security
# ============================================
JWT_SECRET=your-jwt-secret-change-this-in-production
JWT_EXPIRATION=24h
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
RATE_LIMIT_WINDOW_MS=900000  # 15 minutos
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Performance & Limits
# ============================================
MAX_CONCURRENT_GENERATIONS=5
REQUEST_TIMEOUT_MS=30000
MAX_RETRIES=3
CACHE_TTL_SECONDS=3600

# ============================================
# Feature Flags
# ============================================
ENABLE_VIDEO_GENERATION=true
ENABLE_MUSIC_GENERATION=true
# IMPORTANT: Auto-deployment has security implications
# Only enable in trusted environments with proper authentication
ENABLE_AUTO_DEPLOYMENT=false
ENABLE_WEBHOOKS=true
