{
  "name": "tokyo-ia-node-bots",
  "version": "1.0.0",
  "description": "Node.js coordinators for Tokyo-IA project",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "npm run start:genai & npm run start:deployment",
    "start:genai": "node genai_coordinator/index.js",
    "start:deployment": "node deployment_coordinator/index.js",
    "dev": "nodemon --watch '**/*.js' genai_coordinator/index.js",
    "dev:genai": "nodemon genai_coordinator/index.js",
    "dev:deployment": "nodemon deployment_coordinator/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write '**/*.{js,json,md}'",
    "clean:cache": "node scripts/cleanCache.js",
    "clean:builds": "node scripts/cleanBuilds.js"
  },
  "keywords": [
    "tokyo-ia",
    "ai",
    "bots",
    "coordinators",
    "genai",
    "deployment"
  ],
  "author": "Tokyo-IA Team",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.2.0",
    "openai": "^4.20.0",
    "express": "^4.18.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.0",
    "socket.io": "^4.6.0",
    "firebase-admin": "^12.0.0",
    "redis": "^4.6.0",
    "amqplib": "^0.10.0",
    "fluent-ffmpeg": "^2.1.2",
    "sharp": "^0.33.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.0",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "simple-git": "^3.21.0",
    "semver": "^7.5.4",
    "uuid": "^9.0.1",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.0",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.1.0",
    "@types/jest": "^29.5.0",
    "supertest": "^6.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
