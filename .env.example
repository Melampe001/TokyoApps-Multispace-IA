# Tokyo-IA Environment Configuration
# Copy this file to .env and fill in your API keys

# ========================================
# Core LLM API Keys (REQUIRED FOR AGENTS)
# ========================================
# Get your keys from:
# - Anthropic: https://console.anthropic.com/ (for Akira - Claude Opus 4.1)
# - OpenAI: https://platform.openai.com/api-keys (for Yuki & Kenji - o3)
# - Groq: https://console.groq.com/ (for Hiro - Llama 4 405B)
# - Google: https://makersuite.google.com/app/apikey (for Sakura - Gemini 3.0 Ultra)

ANTHROPIC_API_KEY=sk-ant-your-key-here
OPENAI_API_KEY=sk-your-key-here
GROQ_API_KEY=gsk_your-key-here
GOOGLE_API_KEY=your-key-here
GEMINI_API_KEY=your_gemini_api_key_here

# ========================================
# GitHub Integration (REQUIRED)
# ========================================
# Token for GitHub API access (used by agents for repo operations)
# Get from: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here

# ========================================
# Firebase Configuration (REQUIRED for Mobile)
# ========================================
FIREBASE_PROJECT_ID=your_firebase_project_id

# ========================================
# AI Configuration
# ========================================
USE_REAL_AI_CLIENTS=false  # Set to true to use real AI providers instead of mocks

# ========================================
# Application Configuration
# ========================================
LOG_LEVEL=info
REGISTRY_API_URL=http://localhost:8080
PORT=8080
GO_ENV=development
NODE_ENV=development

# ========================================
# Database Configuration
# ========================================
DB_PASSWORD=tokyo_secure_2025
DATABASE_URL=postgresql://tokyoia:tokyo_secure_2025@localhost:5432/tokyoia

# ========================================
# Additional AI Services (Optional)
# ========================================
# Stability AI - For image generation
STABILITY_API_KEY=your_stability_api_key_here

# ElevenLabs - For voice synthesis
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Search API
SERPAPI_KEY=your_serpapi_key_here

# ========================================
# Security Configuration
# ========================================
UNRESTRICTED_MODE_PIN=your_secure_pin_here
KEYSTORE_PASSWORD=your_keystore_password_here

# ========================================
# External Integrations (Optional)
# ========================================

# Jira Integration
JIRA_BASE_URL=https://your-org.atlassian.net
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT_KEY=TOKYO

# Google Sheets Dashboard
GOOGLE_CREDENTIALS={"type":"service_account","project_id":"your-project"}
GOOGLE_SHEET_ID=your-sheet-id

# Slack Bot
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_APP_TOKEN=xapp-your-app-token

# AWS Data Lake (Optional)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
S3_DATA_LAKE_BUCKET=tokyo-ia-data-lake
ATHENA_DATABASE=tokyo_ia_billing
ATHENA_WORKGROUP=primary