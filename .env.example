# Tokyo-IA Environment Configuration
# Copy this file to .env and fill in your API keys

# Database Configuration
DB_PASSWORD=tokyo_secure_2025

# LLM API Keys
# Get your keys from:
# - Anthropic: https://console.anthropic.com/
# - OpenAI: https://platform.openai.com/api-keys
# - Groq: https://console.groq.com/
# - Google: https://makersuite.google.com/app/apikey

ANTHROPIC_API_KEY=sk-ant-your-key-here
OPENAI_API_KEY=sk-your-key-here
GROQ_API_KEY=gsk_your-key-here
GOOGLE_API_KEY=your-key-here

# AI Configuration
USE_REAL_AI_CLIENTS=false  # Set to true to use real AI providers instead of mocks

# Application Configuration
LOG_LEVEL=info
REGISTRY_API_URL=http://localhost:8080
PORT=8080
GO_ENV=development

# Database URL (for local development)
DATABASE_URL=postgresql://tokyoia:tokyo_secure_2025@localhost:5432/tokyoia

# External Integrations (Optional)

# Jira Integration
JIRA_BASE_URL=https://your-org.atlassian.net
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT_KEY=TOKYO

# Google Sheets Dashboard
GOOGLE_CREDENTIALS={"type":"service_account","project_id":"your-project"}
GOOGLE_SHEET_ID=your-sheet-id

# Slack Bot
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_APP_TOKEN=xapp-your-app-token

# AWS Data Lake (Optional)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
S3_DATA_LAKE_BUCKET=tokyo-ia-data-lake
ATHENA_DATABASE=tokyo_ia_billing
ATHENA_WORKGROUP=primary