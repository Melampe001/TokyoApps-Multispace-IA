# ==============================================================================
# Elite Framework - Environment Variables Template
# ==============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!
#
# Usage:
#   cp .env.example .env
#   # Edit .env with your actual credentials
# ==============================================================================

# ------------------------------------------------------------------------------
# Database Configuration
# ------------------------------------------------------------------------------
DATABASE_URL=postgresql://user:password@localhost:5432/tokyo_ia
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=tokyo_ia
DATABASE_USER=postgres
DATABASE_PASSWORD=your-secure-password

# MongoDB (if using)
MONGODB_URI=mongodb://localhost:27017/tokyo_ia

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ------------------------------------------------------------------------------
# AI/LLM API Keys
# ------------------------------------------------------------------------------
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4096

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
ANTHROPIC_MODEL=claude-3-opus-20240229

# Groq (Fast LLM inference)
GROQ_API_KEY=gsk_your-groq-api-key
GROQ_MODEL=mixtral-8x7b-32768

# Google AI
GOOGLE_AI_API_KEY=your-google-ai-key

# Cohere
COHERE_API_KEY=your-cohere-key

# ------------------------------------------------------------------------------
# Vector Databases (for RAG)
# ------------------------------------------------------------------------------
# Pinecone
PINECONE_API_KEY=your-pinecone-key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX=tokyo-ia

# Weaviate
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your-weaviate-key

# Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your-qdrant-key

# ------------------------------------------------------------------------------
# Security & Authentication
# ------------------------------------------------------------------------------
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=7d

# PIN Security (Tokyo-IA specific)
PIN_SIN_BLOQUEOS=your-secure-pin-here

# OAuth2
OAUTH_CLIENT_ID=your-oauth-client-id
OAUTH_CLIENT_SECRET=your-oauth-client-secret
OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# Session
SESSION_SECRET=your-session-secret-key

# ------------------------------------------------------------------------------
# Firebase (if using)
# ------------------------------------------------------------------------------
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-app.firebaseapp.com
FIREBASE_PROJECT_ID=your-firebase-project
FIREBASE_STORAGE_BUCKET=your-app.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Firebase Admin (server-side)
FIREBASE_SERVICE_ACCOUNT_PATH=./config/firebase-admin.json
GOOGLE_APPLICATION_CREDENTIALS=./config/firebase-admin.json

# ------------------------------------------------------------------------------
# Bot Platforms
# ------------------------------------------------------------------------------
# Discord
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
DISCORD_GUILD_ID=your-server-id

# Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook

# WhatsApp (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=+14155238886

# ------------------------------------------------------------------------------
# Payment Gateways
# ------------------------------------------------------------------------------
# Stripe
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# ------------------------------------------------------------------------------
# Email Services
# ------------------------------------------------------------------------------
# SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@tokyo-ia.com

# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key

# Mailgun
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=mg.your-domain.com

# ------------------------------------------------------------------------------
# Cloud Storage
# ------------------------------------------------------------------------------
# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=tokyo-ia-storage

# Google Cloud Storage
GCS_PROJECT_ID=your-gcp-project-id
GCS_BUCKET=tokyo-ia-storage
GCS_KEYFILE_PATH=./config/gcs-keyfile.json

# Cloudflare R2
R2_ACCOUNT_ID=your-r2-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET=tokyo-ia-storage

# ------------------------------------------------------------------------------
# Monitoring & Analytics
# ------------------------------------------------------------------------------
# Sentry
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# PostHog
POSTHOG_API_KEY=your-posthog-key
POSTHOG_HOST=https://app.posthog.com

# ------------------------------------------------------------------------------
# Deployment Configuration
# ------------------------------------------------------------------------------
# General
NODE_ENV=development
PORT=3000
HOST=localhost
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# Deploy Token (for CI/CD)
DEPLOY_TOKEN=your-deployment-token

# Docker Registry
DOCKER_REGISTRY=ghcr.io
DOCKER_USERNAME=your-github-username
DOCKER_PASSWORD=your-github-token

# Kubernetes
KUBECONFIG=~/.kube/config
K8S_NAMESPACE=tokyo-ia

# Vercel
VERCEL_TOKEN=your-vercel-token
VERCEL_ORG_ID=your-org-id
VERCEL_PROJECT_ID=your-project-id

# ------------------------------------------------------------------------------
# API Keys (External Services)
# ------------------------------------------------------------------------------
# Google Maps
GOOGLE_MAPS_API_KEY=your-google-maps-key

# Weather API
WEATHER_API_KEY=your-weather-api-key

# News API
NEWS_API_KEY=your-news-api-key

# ------------------------------------------------------------------------------
# Rate Limiting
# ------------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ------------------------------------------------------------------------------
# CORS Configuration
# ------------------------------------------------------------------------------
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true

# ------------------------------------------------------------------------------
# Logging
# ------------------------------------------------------------------------------
LOG_LEVEL=info
LOG_FORMAT=json

# ------------------------------------------------------------------------------
# Feature Flags
# ------------------------------------------------------------------------------
ENABLE_ANALYTICS=true
ENABLE_DEBUG_MODE=false
ENABLE_SWAGGER_UI=true
ENABLE_GRAPHQL_PLAYGROUND=true

# ------------------------------------------------------------------------------
# Testing
# ------------------------------------------------------------------------------
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/tokyo_ia_test
TEST_REDIS_URL=redis://localhost:6379/1

# ==============================================================================
# Notes:
# - Replace all placeholder values with your actual credentials
# - Never commit .env to git (it's in .gitignore)
# - Use strong, unique passwords and secrets
# - Rotate credentials regularly
# - Use different credentials for dev/staging/production
# ==============================================================================
